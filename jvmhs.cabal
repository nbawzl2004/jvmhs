test-suite jvmhs-test-suit
  type: exitcode-stdio-1.0
  main-is: Test.hs
  hs-source-dirs: test-suite
  ghc-options: -Wall -rtsopts -threaded -with-rtsopts=-N
  build-depends: base
               , binary
               , bytestring
               , containers
               , directory >= 1.3.0.0
               , filepath >= 1.4.1.1
               , jvmhs
               , process >= 1.4.3.0
               , tasty
               , tasty-discover
               , tasty-hspec >= 1.1.3.2
               , tasty-quickcheck
               , lens
               , vector
  other-modules:           Language.JVM.Binary.AttributeTest
                         , Language.JVM.Binary.ClassFileTest
                         , Language.JVM.Binary.ConstantTest
                         , Language.JVM.Binary.CodeTest
                         , Language.JVM.Binary.SizedListTest
                         , Language.JVM.Binary.FieldTest
                         , Language.JVM.Binary.MethodTest
                         , Language.JVM.TypeTest
                         , SpecHelper
  default-language: Haskell2010

source-repository head
  type:     git
  location: https://github.com/kalhauge/jvmhs
