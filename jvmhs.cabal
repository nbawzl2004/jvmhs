name:                jvmhs
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/kalhauge/jvmhs#readme
license:             BSD3
license-file:        LICENSE
author:              Christian Kalhauge
maintainer:          christian@kalhauge.dk
copyright:           LGPL3
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  default-extensions:          RankNTypes
  ghc-options: -Wall 
  exposed-modules:     Language.JVM.Binary.Attribute
                     , Language.JVM.Binary.ClassFile
                     , Language.JVM.Binary.Code
                     , Language.JVM.Binary.Constant
                     , Language.JVM.Binary.Field
                     , Language.JVM.Binary.Method
                     , Language.JVM.Binary.SizedList
                     , Language.JVM.Class
                     , Language.JVM.ClassLoader
                     , Language.JVM.ClassName
                     , Language.JVM.Field
                     , Language.JVM.Hierarchy
                     , Language.JVM.Method
                     , Language.JVM.Type
  other-modules:       Text.Parser
  build-depends:       aeson
                     , base >= 4.7 && < 5
                     , binary
                     , bytestring
                     , containers
                     , directory
                     , filepath
                     , process
                     , text
                     , lens
                     , lens-action
                     , free
                     , vector
                     , zip-archive
  default-language:    Haskell2010

